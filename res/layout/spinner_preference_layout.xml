<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10px"
    android:paddingRight="10px" >

    <Button
        android:id="@+id/inc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="&gt;" android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/inc_btn"
        android:paddingLeft="7dp"
        android:text="-"
        android:textSize="16dp" android:layout_alignBaseline="@+id/inc_btn" android:paddingRight="7dp" android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/dec_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/value"
        android:text="&lt;" android:layout_centerVertical="true"/>

	<TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/dec_btn"
        android:paddingLeft="10px"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:textSize="21dp" android:layout_centerVertical="true"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:sofurry="http://schemas.android.com/apk/res/com.sofurry"
>
	<PreferenceCategory
		android:title="Account Information"
	>
		<EditTextPreference
			android:key="username"
			android:title="Username"
			android:summary="SoFurry username"
			android:dialogTitle="Enter your SoFurry username" />
		<EditTextPreference
			android:key="password"
			android:title="Password"
			android:summary="SoFurry password"
			android:dialogTitle="Enter your SoFurry password"
			android:inputType="textPassword" />
	</PreferenceCategory>
	<PreferenceCategory
		android:title="Misc Settings"
	>
		<CheckBoxPreference
			android:key="pmEnableChecks"
			android:title="PM Background Checks"
			android:defaultValue="true"
			android:summaryOn="Will check for PMs in the background, even if the app isn't currently running."
			android:summaryOff="Will NOT check for PMs, and thus won't show notifications." />
		<ListPreference
			android:key="pmCheckInterval"
			android:title="PM Check Interval"
			android:defaultValue="900000"
			android:dependency="pmEnableChecks"
			android:summary="How often the background service should check for PMs"
			android:dialogTitle="Choose Interval. Smaller values will drain the battery faster."
			android:entries="@array/interval_titles"
			android:entryValues="@array/interval_values" />
		
	</PreferenceCategory>
	<PreferenceCategory
		android:title="Image Library"
	>
		<EditTextPreference
			android:key="imgFileNameTemplate"
			android:dialogTitle="Image file name template"
			android:title="Image file name template"
			android:summary="Supports: %AUTHOR%, %NAME%, %DATE%, and %LEVEL%"
			android:defaultValue="%AUTHOR% - %NAME%" />
		<CheckBoxPreference
			android:key="imgFileNameTemplateUseAdultForExtreme"
			android:title="Do not use 'extreme'"
			android:summary="Use only 'clean' and 'adult' for level"
			android:defaultValue="false" />
		<EditTextPreference android:key="thumb_cleanup_period" android:title="Delete thumbnails older than ... days (0=all, -1 = disabled)" android:defaultValue="3"/>
	</PreferenceCategory>
	<PreferenceCategory android:title="Submission Viewer"><ListPreference android:key="useHDImg" android:entries="@array/useHD_titles" android:entryValues="@array/useHD_values" android:title="Use HD images" android:dialogTitle="Choose when to use HD images" android:summary="Controls when to download HD images" android:defaultValue="0"></ListPreference>
		<CheckBoxPreference android:defaultValue="true" android:key="imgCheckSaved" android:title="Show if image already saved in library" android:summaryOn="Will show saved status" android:summaryOff="Will NOT show saved status"></CheckBoxPreference>
		<ListPreference android:title="Side menu position" android:key="imgMenuPosition" android:entries="@array/imgMenuPosition_titles" android:summary="position of always visible fast buttons bar" android:dialogTitle="Choose menu bar position" android:defaultValue="1" android:entryValues="@array/imgMenuPosition_values"></ListPreference>
		<CheckBoxPreference android:summaryOn="Load library images" android:summaryOff="Download image" android:summary="Try use library image before download" android:title="Show images from library" android:key="imgLoadFromLib" android:defaultValue="true"></CheckBoxPreference>
		<com.sofurry.SeekBarPreference
            android:dialogMessage="Art gallery thimbnail size" 
            android:key="art_gallery_thumbnail_size" 
            android:summary="Art gallery thimbnail size" 
            android:text=" minutes" 
            sofurry:min="64" 
            sofurry:defaultValue="130" 
            sofurry:max="255" 
            android:title="Thumbnail size"/>
		<CheckBoxPreference android:summaryOn="Click to load HD image" android:title="Do not load HD image until tap" android:summaryOff="Click for external viewer" android:key="load_hd_on_click" android:defaultValue="true"/>
	</PreferenceCategory>
</PreferenceScreen>
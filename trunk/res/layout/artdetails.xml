<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_horizontal">
<ImageView android:id="@+id/imagepreview" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:adjustViewBounds="true" 
		android:clickable="true">
</ImageView>
<TextView android:id="@+id/imageartisttext" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:text="imageartisttext" android:gravity="center_horizontal">
</TextView>
</LinearLayout>

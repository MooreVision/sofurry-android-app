<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:gravity="center_horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent" android:id="@+id/layout_main">
<RelativeLayout android:layout_weight="0.0" android:layout_height="wrap_content" android:id="@+id/relativeLayout1" android:layout_width="fill_parent">
    <com.sofurry.FixedViewFlipper android:layout_width="fill_parent" android:id="@+id/viewFlipper1" android:layout_height="fill_parent">
        <RelativeLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:id="@+id/page1">
            <ImageView android:adjustViewBounds="true" android:clickable="true" android:id="@+id/imagepreview1" android:scaleType="matrix" android:layout_centerHorizontal="true" android:layout_centerInParent="true" android:layout_centerVertical="true" android:layout_width="fill_parent" android:layout_height="fill_parent"></ImageView>
            <LinearLayout android:gravity="center_horizontal" android:layout_width="fill_parent" android:orientation="horizontal" android:layout_height="wrap_content">
                <ImageView android:src="@android:drawable/ic_menu_save" android:layout_height="20px" android:layout_width="20px" android:scaleType="fitXY" android:visibility="invisible" android:id="@+id/savedIndicator1"></ImageView>
                <TextView android:textColor="#FFFFFFFF" android:padding="0px" android:text=" Artist Gallery test wrap long names here as described in howto" android:layout_height="wrap_content" android:shadowDx="1" android:shadowDy="1" android:gravity="center_horizontal|center" android:shadowColor="#000000" android:layout_margin="0px" android:shadowRadius="2" android:textSize="16px" android:layout_width="wrap_content" android:id="@+id/InfoText1"></TextView>
            </LinearLayout>
            <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" style="?android:attr/progressBarStyleLarge" android:layout_centerVertical="true" android:layout_centerHorizontal="true" android:id="@+id/loadingIndicator1" android:visibility="invisible" android:background="@android:color/transparent" android:indeterminate="true" android:indeterminateBehavior="cycle" android:layout_centerInParent="true"></ProgressBar>
        </RelativeLayout>
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/page2">
            <ImageView android:adjustViewBounds="true" android:clickable="true" android:id="@+id/imagepreview2" android:scaleType="matrix" android:layout_height="fill_parent" android:layout_width="fill_parent"></ImageView>
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal">
                <ImageView android:src="@android:drawable/ic_menu_save" android:visibility="invisible" android:scaleType="fitXY" android:layout_width="20px" android:layout_height="20px" android:id="@+id/savedIndicator2"></ImageView>
                <TextView android:textSize="16px" android:shadowDx="1" android:shadowColor="#000000" android:layout_height="wrap_content" android:shadowRadius="2" android:shadowDy="1" android:textColor="#FFFFFFFF" android:padding="0px" android:layout_margin="0px" android:layout_width="wrap_content" android:gravity="center_horizontal|center" android:text=" Artist Gallery test wrap long names here as described in howto" android:id="@+id/InfoText2"></TextView>
            </LinearLayout>
            <ProgressBar android:layout_width="wrap_content" android:visibility="invisible" android:layout_height="wrap_content" style="?android:attr/progressBarStyleLarge" android:id="@+id/loadingIndicator2" android:layout_centerHorizontal="true" android:layout_centerVertical="true"></ProgressBar>
        </RelativeLayout>
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/page3">
            <ImageView android:adjustViewBounds="true" android:clickable="true" android:id="@+id/imagepreview3" android:scaleType="matrix" android:layout_height="fill_parent" android:layout_width="fill_parent"></ImageView>
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal">
                <ImageView android:src="@android:drawable/ic_menu_save" android:visibility="invisible" android:scaleType="fitXY" android:layout_width="20px" android:layout_height="20px" android:id="@+id/savedIndicator3"></ImageView>
                <TextView android:textSize="16px" android:shadowDx="1" android:shadowColor="#000000" android:layout_height="wrap_content" android:shadowRadius="2" android:shadowDy="1" android:textColor="#FFFFFFFF" android:padding="0px" android:layout_margin="0px" android:layout_width="wrap_content" android:gravity="center_horizontal|center" android:text=" Artist Gallery test wrap long names here as described in howto" android:id="@+id/InfoText3"></TextView>
            </LinearLayout>
            <ProgressBar android:layout_width="wrap_content" android:visibility="invisible" android:layout_height="wrap_content" style="?android:attr/progressBarStyleLarge" android:id="@+id/loadingIndicator3" android:layout_centerHorizontal="true" android:layout_centerVertical="true"></ProgressBar>
        </RelativeLayout>
    </com.sofurry.FixedViewFlipper>
    <LinearLayout android:weightSum="1" android:gravity="center_vertical|center_horizontal" android:layout_width="wrap_content" android:orientation="vertical" android:layout_height="fill_parent" android:id="@+id/menuLayout" android:layout_alignParentLeft="false" android:layout_alignParentRight="true" android:layout_alignParentBottom="false">
        <Button android:shadowRadius="1" android:shadowColor="#FFFFFF" android:background="@android:color/transparent" android:padding="5px" android:layout_height="wrap_content" android:shadowDy="1" android:drawableTop="@android:drawable/ic_menu_revert" android:id="@+id/BackBtn" android:shadowDx="1" android:layout_width="wrap_content"></Button>
        <Button android:shadowRadius="1" android:shadowColor="#FFFFFF" android:background="@android:color/transparent" android:padding="5px" android:layout_height="wrap_content" android:shadowDy="1" android:drawableTop="@android:drawable/ic_menu_save" android:id="@+id/SaveBtn" android:shadowDx="1" android:layout_width="wrap_content"></Button>
        <Button android:background="@android:color/transparent" android:padding="5px" android:layout_height="wrap_content" android:id="@+id/ArtistGalleryButton" android:layout_width="wrap_content" android:drawableTop="@android:drawable/ic_menu_gallery"></Button>
    </LinearLayout>
</RelativeLayout>

</LinearLayout>
